<!-- 头部内容 -->
<%- include ./common/header %>

<body>
<!-- 顶部导航内容 -->
<%- include ./common/nav %>

<div class="container">
    <div class="blog-header">
        <h1 class="blog-title">ShiXiaomo's Blog</h1>
        <hr/>
        <p class="lead blog-description">欢迎来到爱石小墨的博客，让我们一起去探索生活，开辟趣味的新世界!</p>
    </div>

    <div class="row row-offcanvas row-offcanvas-left">
        <!-- 侧边工具栏 -->
        <%- include ./common/sidebar %>

        <div class="col-xs-12 col-lg-9">
            <div class="blog-post">
                <h3 class="sub-func-title">
                    &nbsp;<span class="glyphicon glyphicon-menu-right"></span>&nbsp;
                    <%= title %>
                </h3>
                <% tags.forEach(function (tag, index) { %>
                    <a class="tag label label-info" href="/tags/<%= tag %>"><%= tag %></a>
                <% }) %>
            </div>
        </div><!--/.col-xs-12.col-lg-9-->

    </div><!--/row-->
</div>

<!-- 底部页尾内容 -->
<%- include ./common/footer %>
