<!-- 头部内容 -->
<%- include ./common/header %>

    <body>
        <!-- 顶部导航内容 -->
        <%- include ./common/nav %>

            <div class="container">
                <div class="blog-header">
                    <h1 class="blog-title">ShiXiaomo's Blog</h1>
                    <hr/>
                    <p class="lead blog-description">欢迎来到石小墨的博客，让我们一起去探索生活，开辟趣味的新世界!</p>
                </div>

                <!-- 描述信息区域 -->
                <div class="jumbotron info-align">
                    <h3>
                        <%= errinfo %>
                    </h3>

                    <script type="text/javascript">
                        //5秒后返回
                        function countDown(secs) {
                            var jumpTo = document.getElementById('jumpTo');
                            jumpTo.innerHTML = secs;
                            if (--secs > 0) {
                                setTimeout("countDown(" + secs + ")", 1000);
                            } else {
                                history.go(-1);
                            }
                        }
                    </script>
                    <p><span id="jumpTo">5</span>秒后返回上一级。</p>
                    <script type="text/javascript">
                        countDown(5)
                    </script>
                    <p><a href="/" class="btn btn-primary btn-lg" role="button">
                    点击直接跳转</a>
                    </p>
                </div>
            </div>

            <!-- 底部页尾内容 -->
            <%- include ./common/footer %>